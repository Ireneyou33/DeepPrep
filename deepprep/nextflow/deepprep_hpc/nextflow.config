params {
    profile = "standard"

    bids_dir = "/lustre/grp/lhslab/sunzy/anning/MSC"
    subjects_dir = "/lustre/grp/lhslab/sunzy/anning/MSC_nf"
    bold_preprocess_path = "/lustre/grp/lhslab/sunzy/anning/MSC_BoldPreprocess"
    qc_result_path = "/lustre/grp/lhslab/sunzy/anning/MSC_qc_result"

    nextflow_bin_path = "/lustre/grp/lhslab/sunzy/anning/DeepPrep/deepprep/nextflow/bin"

    freesurfer_home = "/usr/local/freesurfer720"
    freesurfer_fsaverage_dir = "/lustre/grp/lhslab/sunzy/anning/DeepPrep/deepprep/FreeSurfer/fsaverage"

    fastsurfer_home = "/lustre/grp/lhslab/sunzy/anning/DeepPrep/deepprep/FastSurfer"

    fastcsr_home = "/lustre/grp/lhslab/sunzy/anning/DeepPrep/deepprep/FastCSR"
    fastcsr_model_path = "/lustre/grp/lhslab/sunzy/anning/DeepPrep/deepprep/model/FastCSR"

    surfreg_home = "/lustre/grp/lhslab/sunzy/anning/DeepPrep/deepprep/SageReg"
    surfreg_model_path = "/lustre/grp/lhslab/sunzy/anning/deepprep/model/SageReg/model_files"

    vxm_model_path = "/lustre/grp/lhslab/sunzy/anning/DeepPrep/deepprep/model/voxelmorph"
}


workDir = "/lustre/grp/lhslab/sunzy/anning/MSC_nf_workDir"

dag.overwrite = true
timeline.overwrite = true
report.overwrite = true

process {
  executor = 'slurm'
  queue = 'cpu1,cpu2,fat,amd1,hygon,sugon'
  clusterOptions = { " --chdir=/lustre/grp/lhslab/sunzy/anning/slurm_workdir" }

  withLabel: with_gpus {
  queue = 'gpu1,gpu2'
  clusterOptions = { " --gres=gpu:1" }
  }
}
