params {
    profile = "standard"

    bids_dir = ""
    subjects_dir = ""
    bold_preprocess_path = ""
    qc_result_path = ""

    device = "cuda"
    anat_only = "False"
    bold_only = "False"

    anat_fsthreads = 1

    bold_task_type = "rest"
    bold_skip_frame = 0
    bold_reorient = "True"
    bold_susceptibility_distortion_correction = "False"  // TODO

    bold_nstd_space = ["reorient", "mc", "T1w_2mm"]
    bold_std_space = ["MNI152_T1_2mm"]
    bold_fs_native_space = "True"
    bold_atlas_type = "MNI152_T1_2mm"

    nextflow_bin_path = "/deepprep/nextflow/bin"
    freesurfer_home = "/usr/local/freesurfer"
    freesurfer_fsaverage_dir = "/deepprep/FreeSurfer/fsaverage"
    fastsurfer_home = "/deepprep/FastSurfer"
    fastcsr_home = "/deepprep/FastCSR"
    fastcsr_model_path = "/deepprep/model/FastCSR"
    surfreg_home = "/deepprep/SageReg"
    surfreg_model_path = "/deepprep/model/SageReg/model_files"
    bold_synthmorph_template_path = "/deepprep/model/Synthmorph/template"
    bold_synthmorph_model_path = "/deepprep/model/Synthmorph/models"

    deepprep_version = 'v0.0.1'
}

workDir = "/nextflow/workDir"
dag.overwrite = true
timeline.overwrite = true
report.overwrite = true

// start for local //

executor {
    name = 'local'
    cpus = 54  // set（CPUs_real * 1.5）
    memory = '54 GB'  // set （RAM + Swap space - 10）GB
}

process {
//    errorStrategy = 'ignore'

    withLabel: maxForks_10 {
        maxForks = 10
    }

    withLabel: maxForks_2 {
        maxForks = 2
    }

    withLabel: maxForks_1 {
        maxForks = 1
    }

    withLabel: with_gpu {
        maxForks = 2
    }
}

// end for local //
