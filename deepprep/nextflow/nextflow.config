params {
    profile = "standard"

    bids_dir = "/mnt/ngshare/temp/MSC"
    subjects_dir = "/mnt/ngshare/temp/MSC_Recon"
    bold_preprocess_path = "/mnt/ngshare/temp/MSC_BoldPreprocess"
    qc_result_path = "/mnt/ngshare/temp/MSC_QC_result"

    nextflow_bin_path = "/root/workspace/DeepPrep/deepprep/nextflow/bin"

    freesurfer_home = "/usr/local/freesurfer"
    freesurfer_fsaverage_dir = "/root/workspace/DeepPrep/deepprep/FreeSurfer/fsaverage"

    fastsurfer_home = "/root/workspace/DeepPrep/deepprep/FastSurfer"

    fastcsr_home = "/root/workspace/DeepPrep/deepprep/FastCSR"
    fastcsr_model_path = "/root/workspace/DeepPrep/deepprep/model/FastCSR"

    surfreg_home = "/root/workspace/DeepPrep/deepprep/SageReg"
    surfreg_model_path = "/root/workspace/DeepPrep/deepprep/model/SageReg/model_files"

    vxm_model_path = "/root/workspace/DeepPrep/deepprep/model/voxelmorph"

    anat_fsthreads = 1

    bold_task = "rest"
    bold_skip_reorient_nskip = 0
    bold_vxmregnormmni152_resource_dir = "/root/workspace/DeepPrep/deepprep/resource"
    bold_vxmregnormmni152_batch_size = 16
    bold_vxmregnormmni152_standard_space = "True"
    bold_vxmregnormmni152_fs_native_space = "True"
    atlas_type = "MNI152_T1_2mm"
    device = "cuda"
}

workDir = "/mnt/ngshare/temp/MSC_nf_workDir"
dag.overwrite = true
timeline.overwrite = true
report.overwrite = true


executor {
    name = 'local'
    cpus = 10
    memory = '50 GB'
}

process {

    withLabel: with_gpu {
    maxForks = 1
  }

}
